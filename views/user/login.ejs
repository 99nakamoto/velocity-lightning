<%- include("../layouts/head",{type:'login'}) %>
	<div class="container">
		<form class="form create" method="post ">
			<div>
				<label>Name：</label>
				<input placeholder="请输入用户名" type="text" name="name" />
			</div>
			<div>
				<label>Stellar地址：</label>
				<textarea style="padding-right:5px;" name="secret"></textarea>
			</div>
			<div class="submit">登录</div>
		</form>		
	</div>
	<script>
		$(window).keyup(function(e) {
			if (e.keyCode == 13) {
				$('.submit').click()
			}
		})
		$('.submit').click(()=>{
			if ($('input[name=name]').val().trim() == '') {
				fade('请输入用户名！')
			} else if ($('textarea[name=secret]').val().trim() == '') {
				fade('请输入Stellar地址！')
			} else {
				console.log($('.form').serialize())
				$.ajax({
					url: "/login",
					data: $('.form').serialize(),
					type: "POST",
					cache: false,
					dataType: 'json',
					success: function (data) {
					    if(data.code==200) {
						    fade('登录成功')
						    setTimeout(()=>{
							    window.location.href = "/channel-list"
						    },1500)	               	
					    } else {
							$('input').val('')
						    fade('用户名或密码错误')
					    }
					},
					error: function () {
						fade('异常')
					}
				})			
			}
		})		
	</script>
<% include ../layouts/foot %>