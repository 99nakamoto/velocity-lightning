<%- include("../layouts/head",{type:'wallet'}) %>
    <h1 style="text-align: center;">我的钱包</h1>
	<div class="container">
		<form class="form create" method="post">
			<div>
				账户余额：<%= account_balance %> XLM
			</div>
			<div>
				通道余额：<%= channel_balance %> XLM
            </div>
            <h3>使用账户余额转账</h3>
            <div class="wallet-username">
                <label>对方用户名：</label>
                <input class="wallet-input-username" placeholder="对方用户名" type="text" name="name" />
                <div class="wallet-contack" data-toggle="modal" data-target="#myModal">
	                联系人
            	</div>
            </div>
            <div>
                <label>转账金额：</label>
                <input placeholder="转账金额" type="number" min="0" name="amount" />
            </div>
			<div class="submit">确定</div>
        </form>

        <!-- 联系人 -->
		<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
							&times;
						</button>
						<h4 class="modal-title" id="myModalLabel">
							
						</h4>
					</div>
					<div class="modal-body">
						联系人列表
						<div class="contack-add-wrap">
								<table class="table">
								    <thead>
									    <tr>
									        <th>用户名</th>
									        <th>操作</th>
									    </tr>
								    </thead>
								    <tbody>
									    <tr>
									        <td><a href="#">Michael</a></td>
									        <td><a href="#">选择</a></td>
									    </tr>
								    </tbody>
								</table>
							</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">关闭
						</button>
						<button type="button" class="btn btn-primary contack-add">
							新增
						</button>
					</div>
				</div><!-- /.modal-content -->
			</div><!-- /.modal -->
		</div>

        <h3 style="text-align: center;margin-top: 100px;">钱包交易记录</h3>
        <ul class="posts" style="width: 50%;margin: 0 auto;margin-top: 10px;">
			<% list.forEach (function(res) { %>
				<%
					if (res.transaction_sponsor_id==session.id) {
						var transaction_name = res.transaction_receive_name
						var transaction_amount = "-"+res.transaction_amount
					} else {
						var transaction_name = res.transaction_sponsor_name
						var transaction_amount = "+"+res.transaction_amount
					}
					switch (res.transaction_type) {
						case 0:
							var transaction_type = "账户交易";
							break
						default :
							var transaction_type = "异常";
					}
				%>
				<li>
					<div class="title" style="margin-left: 0px;font-size: 12px;">
						用户名: 
						<%= transaction_name %>
					</div>
					<span><%= transaction_type %></span>
					<span><%= transaction_amount %>XLM</span>
					<span><%= res.transaction_add_time %></span>
				</li>
			<% }) %>
        </ul>
        <div style="margin-top: 30px" class="pagination" id="page"></div>	
	</div>
	<script src="/js/pagination.js"></script>
	<script>
        pagination({
			selector: '#page',
			totalPage: <%= countPage %>,
			currentPage: 1,
			prev: '上一页',
			next: '下一页',
			first: true,
			last: true,
			showTotalPage: true,
			count: 2//当前页前后显示的数量
		}, function(val) {
			$.ajax({
				url : "wallet-list",
				type : 'POST',
				data : {
					page : val
				},
				cache : false,
				success: function (data) {
					if (data != 'error') {
						$('.posts').html(' ')
						$.each(data,function(i,val){
							if (val.transaction_sponsor_id=="<%= session.id %>") {
								var transaction_name = val.transaction_receive_name
								var transaction_amount = "-"+val.transaction_amount
							} else {
								var transaction_name = val.transaction_sponsor_name
								var transaction_amount = "+"+val.transaction_amount
							}
							switch (val.transaction_type) {
								case 0:
									var transaction_type = "账户交易";
									break
								default :
									var transaction_type = "异常";
							}
							$('.posts').append(
								'<li>'+
									'<div class="title" style="margin-left: 0px;">'+
										'对方用户名:'+ transaction_name +
									'</div>'+
									'<span>'+ transaction_type +'</span>&nbsp;'+
									'<span>'+ transaction_amount +'XLM</span>&nbsp;'+
									'<span>'+ val.transaction_add_time +'</span>'+
								'</li>'
							)
						})
					} else {
						fend('分页不存在')
					}
				}
			})
		})
		$(window).keyup(function (e) {
			if (e.keyCode == 13) {
				$('.submit').click()
			}
		})

		// 加载联系人列表
		$(".wallet-contack").click(function(){

		})

		// 添加联系人
		$(".contack-add").click(function(){
			window.location.href="/contack-add"		
		})

		$('.submit').click(()=>{
			if ($('input[name=name]').val().trim() == '') {
				fade('请输入对方用户名！')
			} else if ($('input[name=amount]').val()<=0) {
				fade('请输入正确金额！')
			} else {
				$.ajax({
					url: "/wallet",
					data: {
						name: $('input[name=name]').val(),
						amount: $('input[name=amount]').val(),
					},
					type: "POST",
					cache: false,
					dataType: 'json',
					success: function (data) {
					   if (data.message == '用户存在') {
						   $('input').val('')
						   fade('用户名存在')
					   } else if(data.message == '转账成功') {
							var fromid = "<%= session.id %>";
							var _data = '{"type":"text","fromid":"'+fromid+'","toid":"'+data.toid+'"}';
							socket.emit('message', _data);
							fade('转账成功')
							setTimeout(()=>{
								location.reload();
							},1000)
					   	} else {
							fade(data.message)
					   	}
					},
					error: function () {
						fade('异常')
					}
				})			
			}
		})		
	</script>
<%- include ../layouts/foot %>