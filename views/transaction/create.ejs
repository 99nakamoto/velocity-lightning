<%- include("../layouts/head",{type:'login'}) %>
	<h1 style="text-align: center;">申请建立支付通道</h1>
	<div class="container">
		<form class="form create" method="post ">
			<div>
				<label>输入对方Stellar地址：</label> 
				<input type="text" name="stellar_address">
			</div>
			<div>
				<label>输入对方Ip地址：</label> 
				<input type="text" name="ip_address">
			</div>
			<div>
				<label>输入存入通道金额：<span style="color:gray;font-size:10px">（当前账下余额:<%= balance %>）</span></label>
				<input type="text" name="amount">
			</div>
			<div class="submit">申请</div>
		</form>		
	</div>
	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js"></script>
	<script>
		var socket = io.connect('http://127.0.0.1:7000');
	    socket.on('receive', function(data) {
	    	console.log(data.text)
	    });
		$(window).keyup(function(e) {
			if (e.keyCode == 13) {
				$('.submit').click()
			}
		})
		$('.submit').click(()=>{
			socket.emit('send', { text : '1'});
			if ($('input[name=stellar_address]').val().trim() == '' || $('input[name=ip_address]').val().trim() == '' || $('input[name=amount]').val().trim() == '' ) {
				fade('请输入stellar地址或ip地址或金额')
			} else {
				console.log($('.form').serialize())
				$.ajax({
					url: "/create",
					data: $('.form').serialize(),
					type: "POST",
					cache: false,
					dataType: 'json',
					success: function (data) {
					    if(data.code==200) {
						    fade('建立申请已发送')
						    window.location.href="/lobby"
					    } else {
							$('input').val('')
						    fade('建立失败')
					    }
					},
					error: function () {
						fade('异常')
					}
				})			
			}
		})		
	</script>
<% include ../layouts/foot %>